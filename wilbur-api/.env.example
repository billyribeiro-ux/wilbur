# Database
DATABASE_URL=postgres://user:password@localhost:5432/wilbur
DATABASE_MAX_CONNECTIONS=20

# JWT
JWT_SECRET=change-me-to-a-64-char-random-string
JWT_ACCESS_TOKEN_EXPIRY_SECS=3600
JWT_REFRESH_TOKEN_EXPIRY_SECS=2592000

# Server
HOST=0.0.0.0
PORT=3000
ALLOWED_ORIGINS=http://localhost:5173

# S3/R2 Storage
S3_BUCKET=wilbur-storage
S3_REGION=auto
S3_ENDPOINT=https://your-account.r2.cloudflarestorage.com
AWS_ACCESS_KEY_ID=your-key
AWS_SECRET_ACCESS_KEY=your-secret

# LiveKit
LIVEKIT_API_KEY=your-key
LIVEKIT_API_SECRET=your-secret
LIVEKIT_URL=wss://your-livekit-server.livekit.cloud

# SMTP (email)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=noreply@wilbur.com
SMTP_PASSWORD=your-smtp-password
SMTP_FROM=noreply@wilbur.com

# OAuth â€” Spotify
SPOTIFY_CLIENT_ID=your-client-id
SPOTIFY_CLIENT_SECRET=your-client-secret

# Logging
RUST_LOG=wilbur_api=debug,tower_http=debug
