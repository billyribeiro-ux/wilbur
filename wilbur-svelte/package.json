    "@tailwindcss/forms": "^0.5.9",
    "@tailwindcss/typography": "^0.5.15",
    "date-fns": "^4.1.0",
    "dompurify": "^3.3.0",
    "livekit-client": "^2.15.13",
    "lucide-svelte": "^0.468.0",
