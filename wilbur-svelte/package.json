    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "pocketbase:start": "pocketbase serve --http=127.0.0.1:8090",
    "pocketbase:download": "curl -L https://github.com/pocketbase/pocketbase/releases/download/v0.23.4/pocketbase_0.23.4_linux_amd64.zip -o pocketbase.zip && unzip pocketbase.zip pocketbase && rm pocketbase.zip",
    "db:migrate": "npx tsx scripts/migrate-to-pocketbase.ts",
    "db:seed": "npx tsx scripts/seed-database.ts"
  },
  "dependencies": {
    "@floating-ui/dom": "^1.6.12",
