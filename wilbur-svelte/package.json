    "@types/node": "^22.10.2",
    "autoprefixer": "^10.4.22",
    "eslint": "^9.39.1",
    "eslint-plugin-svelte": "^3.0.0",
    "globals": "^16.5.0",
    "postcss": "^8.5.6",
    "prettier": "^3.4.2",
    "prettier-plugin-svelte": "^3.3.2",
    "svelte": "^5.14.0",
